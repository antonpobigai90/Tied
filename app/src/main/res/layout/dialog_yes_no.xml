<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/top_curve_background_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/button_bg"
                android:gravity="center_horizontal"
                android:text="Heading"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/schedule_title_bg_color"
                android:gravity="center_horizontal"
                android:text="Are you sure you want to delete this data"
                android:textSize="16sp"/>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancel"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/bottom_curve_white_background"
            android:layout_marginRight="7dp"
            android:text="CANCEL"
            android:textStyle="bold"
            android:textColor="@color/schedule_title_bg_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/yes"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/bottom_curve_white_background"
            android:text="YES DONE"
            android:textStyle="bold"
            android:textColor="@color/color_green"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>
