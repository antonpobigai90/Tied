<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:padding="0dip"
              android:background="@drawable/rounded_white_background"
              android:layout_height="wrap_content">
    <RelativeLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="0dp"

            android:layout_marginBottom="0dp"
            android:layout_height="80dp">

        <de.hdodenhof.circleimageview.CircleImageView
                android:onClick="onClick"
                android:id="@+id/user_picture_iv"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/default_avatar" />
        <TextView android:layout_width="wrap_content"
                  android:text=""
                  android:id="@+id/full_name_tv"
                  android:layout_marginTop="30dp"
                  android:layout_toRightOf="@+id/user_picture_iv"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/grey"
                  android:textSize="16sp"
                  android:layout_alignParentTop="true"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text="emily@dobson.com"
                  android:layout_marginRight="20dp"
                  android:id="@+id/address_tv"
                  android:textColor="@color/grey"
                  android:layout_toRightOf="@+id/user_picture_iv"
                  android:layout_below="@+id/full_name_tv"
                  android:layout_centerHorizontal="true"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text=""
                  android:id="@+id/distance"
                  android:layout_marginTop="30dp"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/grey"
                  android:textSize="16sp"
                  android:layout_marginRight="20dp"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentTop="true"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:text=""
                  android:layout_marginRight="20dp"
                  android:id="@+id/travel_time"
                  android:gravity="right"
                  android:textColor="@color/grey"
                  android:layout_alignParentRight="true"
                  android:layout_below="@+id/distance"
                  android:layout_centerHorizontal="true"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:background="#f4f4f4"
                                 android:padding="5dip"
                                 android:gravity="center_vertical"
                                 android:orientation="horizontal">
    <ImageView android:layout_width="20dp"
               android:layout_height="20dp"
               android:layout_margin="10dp"
               android:src="@drawable/ic_info_grey"/>
    <TextView android:layout_width="wrap_content"
              android:text="Last Visited: Never"
              android:layout_marginLeft="20dp"
              android:textColor="@color/grey"
              android:layout_height="wrap_content"/>

</LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="0.1dp" android:background="@color/light_gray2"/>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="#f4f4f4"
                  android:padding="5dip"
                  android:gravity="center_vertical"
                  android:orientation="horizontal">
        <ImageView android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:layout_margin="10dp"
                   android:src="@drawable/ic_dollar_grey"/>
        <TextView android:layout_width="wrap_content"
                  android:text="Total Earnings: $0.00"
                  android:layout_marginLeft="20dp"
                  android:textColor="@color/grey"
                  android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="10dip"
                  android:gravity="center"
                  android:orientation="horizontal">
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp"
                   android:src="@drawable/ic_call_blue"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp"
                   android:src="@drawable/ic_message"/>
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp"
                   android:src="@drawable/ic_locate"/>


    </LinearLayout>
</LinearLayout>