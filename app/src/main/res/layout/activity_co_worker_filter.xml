<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/background_gradient">

        <LinearLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:onClick="goBack"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_close"
                style="@style/ActionBarIcon"
                android:src="@drawable/btn_back_arrow" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter"
            android:id="@+id/textView12"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="APPLY"
                android:id="@+id/txt_apply"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_round"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="CLEAR"
                android:id="@+id/txt_clear"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/white_fill_grey_stroke"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/button_material_dark" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
        android:layout_above="@+id/bottom_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DISTANCE FROM ME"
            android:id="@+id/textView13"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp" />

        <SeekBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progress="50" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLIENTS"
                    android:id="@+id/textView14"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:text="All"
                        android:id="@+id/txt_all"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/white_fill_grey_stroke"
                        android:layout_marginLeft="15dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:text="Just Me"
                        android:id="@+id/txt_justme"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/white_fill_grey_stroke"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:text="Company"
                        android:id="@+id/txt_company"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/blue_fill_grey_stroke"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:text="Co-Worker"
                        android:id="@+id/txt_co_worker"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/white_fill_grey_stroke"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="LAST VISITED"
                    android:id="@+id/textView15"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:text="1W"
                        android:id="@+id/txt_1w"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/white_fill_grey_stroke"
                        android:layout_marginLeft="15dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:text="2W"
                        android:id="@+id/txt_2w"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/white_fill_grey_stroke"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:text="3W"
                        android:id="@+id/txt_3w"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/blue_fill_grey_stroke"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:text="4W"
                        android:id="@+id/txt_4w"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/white_fill_grey_stroke"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="35dp"
                        android:text="2M+"
                        android:id="@+id/txt_2m"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/white_fill_grey_stroke"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="5dp"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SALES"
                    android:id="@+id/textView16"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:layout_marginTop="5dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:text="Highest"
                        android:id="@+id/txt_highest"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/white_fill_grey_stroke"
                        android:layout_marginLeft="15dp" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:text="Lowest"
                        android:id="@+id/txt_lowest"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:gravity="center_vertical|center_horizontal"
                        android:background="@drawable/blue_fill_grey_stroke"
                        android:layout_marginLeft="10dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:id="@+id/territory_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="TERRITORY"
                            android:id="@+id/textView17"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:gravity="center_vertical" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:id="@+id/imageView3"
                            android:src="@drawable/ic_arrow_gray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@android:color/darker_gray" />

                    <RelativeLayout
                        android:id="@+id/line_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="LINES"
                            android:id="@+id/textView18"
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:gravity="center_vertical" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="20dp"
                            android:id="@+id/imageView4"
                            android:src="@drawable/ic_arrow_gray"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="@android:color/darker_gray" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>