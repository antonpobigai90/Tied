<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_layout"
        android:id="@+id/linearLayout3">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@mipmap/background_gradient">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="Schedules"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/back_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_close"
                    android:layout_width="@dimen/action_bar_icon_height"
                    android:layout_height="@dimen/action_bar_icon_height"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/btn_back_arrow"
                    android:padding="@dimen/action_bar_icon_padding" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/list"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title"
        android:background="@color/white" />
    <ProgressBar android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/progress_bar"
        android:indeterminate="true"/>
    <TextView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_gray2"
        android:layout_gravity="center_vertical"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:id="@+id/empty_schedule"
        android:padding="10dp"
        android:textSize="15sp"

        android:text="You have nothing scheduled for this period!"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="ACTIVITY SCHEDULES"
        android:textSize="15sp"
        android:textColor="@android:color/black"
        android:id="@+id/title"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentEnd="false"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="@color/sub_title_bg" />
    android:layout_below="@+id/textView5" />

</RelativeLayout>