<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"

        android:background="@drawable/background_gradient">


        <RelativeLayout
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
            android:padding="0dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                android:id="@+id/tab_bg"
                android:src="@drawable/map_active" />

            <LinearLayout
                    android:id="@+id/tab_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:weightSum="1" android:layout_alignParentBottom="true">
                <ImageView
                        android:id="@+id/img_map_clients"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="centerCrop"
                        android:alpha="0"
                        android:src="@drawable/ic_map_active" android:layout_weight="0.70"/>

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="10dp"
                    android:id="@+id/img_list_clients"
                    android:alpha="0"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_list_inactive" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:onClick="goBack"

            android:orientation="horizontal">


            <ImageView
                android:id="@+id/img_close"
                style="@style/ActionBarIcon"
                android:src="@drawable/btn_back_arrow" />

        </LinearLayout>

        <LinearLayout

            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp">

            <ImageView

                android:id="@+id/img_filter"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_filter_map" />
        </LinearLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:id="@+id/img_segment"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/schedule_create_appointment_bg_color"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:focusable="true"
            android:id="@+id/getFocus" />

        <EditText
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SearchEditText"
            android:hint="Search Client by Name"/>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>