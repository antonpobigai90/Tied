<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:background="@drawable/background"
        android:layout_height="54dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:text="Add Goal"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_close"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/action_bar_icon_height"
                android:layout_marginLeft="10dp"
                android:padding="@dimen/action_bar_icon_padding"
                android:src="@drawable/btn_close" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ok_but"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/action_bar_icon_height"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="35dp"
                android:layout_height="@dimen/action_bar_icon_height"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:src="@drawable/checkmark" />
        </LinearLayout>

    </RelativeLayout>


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:layout_weight="0.40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="2dp"
                android:paddingTop="5dp">

                <TextView
                    style="@style/FieldLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TITLE OF THIS GOAL" />

                <EditText
                    android:id="@+id/goal_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:text=""
                    android:textColor="@color/grey" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="2dp"
                android:paddingTop="5dp">

                <TextView
                    style="@style/FieldLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/target_label"
                    android:text="HOW MUCH SALES DO YOU INTEND TO ACHIEVE ($)" />

                <EditText
                    android:id="@+id/how_much"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:text=""
                    android:inputType="numberDecimal"
                    android:textColor="@color/grey" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="2dp"
                android:paddingTop="5dp">

                <TextView
                    style="@style/FieldLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="END DATE" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date"
                    android:text="Click to choose date"
                    android:textColor="@color/grey"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/date_selected"
                    android:visibility="gone"
                    android:textColor="@color/grey"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:background="@color/light_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="2dp"
                android:paddingTop="5dp">

                <TextView
                    style="@style/FieldLabels"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NOTE" />

                <EditText
                    android:id="@+id/note"
                    android:inputType="textMultiLine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:text=""
                    android:textColor="@color/grey" />

                <View
                    style="@style/SeperatorHorizontal" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
