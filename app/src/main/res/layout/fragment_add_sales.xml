<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"

              android:orientation="vertical">
    <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:background="@drawable/background_layout"
            android:layout_height="@dimen/action_bar_height">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:layout_marginTop="0dp"
                android:text="Add a Sale"
                android:textColor="@color/white"
                android:textSize="15sp" />

        <ImageView
                android:id="@+id/img_close"
                style="@style/ActionBarIcon"
                android:onClick="goBack"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/btn_close" />




        <ImageView
                android:id="@+id/img_edit"
                style="@style/ActionBarIcon"
                android:gravity="center"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:src="@drawable/checkmark" />


    </RelativeLayout>
    <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">


        <ScrollView android:layout_width="match_parent"
                    android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="@drawable/rounded_white_background"
                      android:padding="10dp"
                        android:layout_margin="10dp">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical"
                          android:onClick="onClick"
                          android:orientation="horizontal">
                <ImageView
                        android:onClick="onClick"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:focusable="true"
                         />
                <EditText android:layout_width="0dp"
                          android:layout_weight="1"
                          style="@style/EditTextStyle"
                          android:textColorHint="@color/light_gray2"
                          android:hint="Title of this sale"
                          android:textColor="@color/grey"
                          android:textSize="15sp"
                          android:padding="5dp"
                          android:id="@+id/title"
                          android:layout_height="wrap_content"
                          android:text=""/>


            </LinearLayout>
            <LinearLayout style="@style/SeperatorHorizontal" />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical"
                          android:onClick="onClick"
                          android:id="@+id/select_client"
                          android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:onClick="onClick"
                        android:id="@+id/client_photo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/default_avatar" />
                <TextView android:layout_width="0dp"
                          android:layout_weight="1"
                          style="@style/EditTextStyle"
                          android:id="@+id/client_name"
                          android:textSize="15sp"
                          android:textColor="@color/grey"
                          android:layout_height="wrap_content"
                android:text="Select Client"/>
                <ImageView android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/right_arrow"/>

            </LinearLayout>
            <LinearLayout style="@style/SeperatorHorizontal"
            android:visibility="gone"/>
            <LinearLayout android:layout_width="match_parent"
                          android:visibility="gone"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical"
                          android:onClick="onClick"
                          android:id="@+id/select_line"
                          android:orientation="horizontal">
                <ImageView
                        android:onClick="onClick"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/icon_layer_blue" />
                <TextView android:layout_width="0dp"
                          android:layout_weight="1"
                          style="@style/EditTextStyle"
                          android:textColor="@color/grey"
                          android:id="@+id/line_name"
                          android:layout_height="wrap_content"
                          android:text="Select Line"/>
                <ImageView android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/right_arrow"/>

            </LinearLayout>
            <LinearLayout style="@style/SeperatorHorizontal" />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical"
                          android:onClick="onClick"
                          android:orientation="horizontal">
                <ImageView
                        android:onClick="onClick"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:id="@+id/getFocus"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:focusable="true"
                        android:src="@drawable/ic_dollar_grey" />
                <EditText android:layout_width="0dp"
                          android:layout_weight="1"
                          style="@style/EditTextStyle"
                          android:textColorHint="@color/light_gray2"
                          android:hint="Sales amount"
                          android:textColor="@color/grey"
                          android:textSize="15sp"
                          android:padding="5dp"
                          android:inputType="numberDecimal"
                          android:id="@+id/sale_amount"
                          android:layout_height="wrap_content"
                          android:text=""/>


            </LinearLayout>
            <LinearLayout style="@style/SeperatorHorizontal" />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical"
                          android:onClick="onClick"
                          android:id="@+id/select_date"
                          android:orientation="horizontal">
                <ImageView
                        android:onClick="onClick"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_time_grey" />
                <TextView android:layout_width="0dp"
                          android:layout_weight="1"
                          style="@style/EditTextStyle"
                          android:textColorHint="@color/grey"
                          android:hint="Date of Sales"
                          android:textSize="15sp"
                          android:id="@+id/date_sold"
                          android:textColor="@color/grey"
                          android:layout_height="wrap_content"
                          android:text=""/>

                <ImageView android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/up_down_arrow"/>

            </LinearLayout>


        </LinearLayout>

        </ScrollView>
        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue"
                android:id="@+id/add"
                android:onClick="onClick"

                android:text="ADD SALE"/>


    </LinearLayout>


</LinearLayout>
