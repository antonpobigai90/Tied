<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/background_green"
              android:orientation="vertical">
    <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:background="@drawable/background_layout"
            android:layout_height="@dimen/action_bar_height">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_centerInParent="true"
                android:layout_marginTop="0dp"
                android:text="Add a Sale"
                android:textColor="@color/white"
                android:textSize="15sp" />

        <ImageView
                android:id="@+id/img_close"
                style="@style/ActionBarIcon"
                android:onClick="goBack"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/btn_close" />




        <ImageView
                android:id="@+id/img_edit"
                style="@style/ActionBarIcon"
                android:gravity="center"
                android:layout_height="50dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:src="@drawable/checkmark" />


    </RelativeLayout>
    <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
        <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="0dp"
                    android:text="Add a Sale"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                android:textStyle="bold" />

            <LinearLayout
                    android:id="@+id/back_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_alignParentTop="true"
                    android:orientation="horizontal"
                android:layout_centerVertical="true">

                <ImageView
                        android:id="@+id/img_close"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:onClick="goBack"

                    android:layout_marginLeft="10dp"
                        android:src="@drawable/btn_back_arrow" />

        <ScrollView android:layout_width="match_parent"
                    android:layout_height="0dp"
        android:layout_weight="1">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:background="@drawable/rounded_white_background"
                      android:padding="10dp"
                        android:layout_margin="10dp">
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical"
                          android:onClick="onClick"
                          android:orientation="horizontal">
                <ImageView
                        android:onClick="onClick"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:focusable="true"
                         />
                <EditText android:layout_width="0dp"
                          android:layout_weight="1"
                          style="@style/EditTextStyle"
                          android:textColorHint="@color/light_gray2"
                          android:hint="Title of this sale"
                          android:textColor="@color/grey"
                          android:textSize="15sp"
                          android:padding="5dp"
                          android:id="@+id/title"
                          android:layout_height="wrap_content"
                          android:text=""/>


            </LinearLayout>
            <LinearLayout style="@style/SeperatorHorizontal" />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical"
                          android:onClick="onClick"
                          android:id="@+id/select_client"
                          android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:onClick="onClick"
                        android:id="@+id/client_photo"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="10dp"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:scaleType="centerCrop"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/default_avatar" />
                <TextView android:layout_width="0dp"
                          android:layout_weight="1"
                          style="@style/EditTextStyle"
                          android:textColor="@color/schedule_title_bg_color"
                          android:layout_height="wrap_content"
                android:text="Select Client"
                    android:textSize="15dp" />
                <TextView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                    android:text="Change"
                    android:textColor="@color/grey"
                    android:textSize="15dp" />

            </LinearLayout>
            <LinearLayout style="@style/SeperatorHorizontal"
            android:visibility="gone"/>
            <LinearLayout android:layout_width="match_parent"
                          android:visibility="gone"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical"
                          android:onClick="onClick"
                          android:id="@+id/select_line"
                          android:orientation="horizontal">
                <ImageView
                        android:onClick="onClick"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/icon_layer_blue" />
                <TextView android:layout_width="0dp"
                          android:layout_weight="1"
                          style="@style/EditTextStyle"
                          android:textColor="@color/schedule_title_bg_color"
                          android:layout_height="wrap_content"
                          android:text="Select Line"
                    android:textSize="15dp" />
                <ImageView android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:src="@drawable/right_arrow"/>

            </LinearLayout>
            <LinearLayout style="@style/SeperatorHorizontal" />
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical"
                          android:onClick="onClick"
                          android:orientation="horizontal">
                <ImageView
                        android:onClick="onClick"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:id="@+id/getFocus"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:focusable="true"
                        android:src="@drawable/ic_dollar_grey" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Sales to Record"
                    android:id="@+id/textView8"
                    android:textColor="@color/grey"
                    android:layout_marginTop="5dp"
                    android:textSize="10dp" />

                    <EditText android:layout_width="match_parent"
                        style="@style/EditTextStyle"
                        android:textColorHint="@color/light_gray2"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        android:layout_height="35dp"
                        android:text="4500"
                        android:inputType="numberDecimal" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout style="@style/SeperatorHorizontal" />
            <RelativeLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical"
                          android:onClick="onClick"
                          android:id="@+id/select_date"
                          android:orientation="horizontal">
                <ImageView
                        android:id="@+id/img_timer"
                        android:onClick="onClick"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="15dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/ic_time_grey" />
                <LinearLayout android:layout_width="match_parent"
                          android:layout_weight="1"
                          style="@style/EditTextStyle"
                          android:textColorHint="@color/grey"
                          android:hint="Date of Sales"
                          android:textSize="15sp"
                          android:id="@+id/date_sold"
                          android:textColor="@color/grey"
                          android:layout_height="wrap_content"
                          android:text=""
                    android:layout_toRightOf="@+id/img_timer"
                    android:layout_toLeftOf="@+id/below"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date sale was made"
                        android:textColor="@color/grey"
                        android:layout_marginTop="5dp"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="match_parent"
                        android:textColorHint="@color/light_gray2"
                        android:textColor="@color/grey"
                        android:textSize="15sp"
                        android:layout_height="35dp"
                        android:text="July 11, 2016"
                        android:inputType="number"
                        android:gravity="center_vertical" />

                </LinearLayout>
                <ImageView
                    android:id="@+id/below"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/up_down_arrow"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <LinearLayout style="@style/SeperatorHorizontal" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Note Text"
                    android:id="@+id/textView9"
                    android:textColor="@color/grey"
                    android:layout_marginTop="10dp"
                    android:textSize="10dp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text|textMultiLine"
                    android:ems="10"
                    android:id="@+id/editText"
                    android:layout_marginTop="7dp"
                    android:text="I am thinking we should get this to work as soon as we can becuase of the"
                    android:textColor="@color/schedule_title_bg_color" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>


