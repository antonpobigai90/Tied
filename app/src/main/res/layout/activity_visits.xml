<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@drawable/background_blue">

        <ImageView
            android:id="@+id/img_close"
            android:src="@mipmap/btn_back_arrow"
            android:layout_centerVertical="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/action_bar_icon_padding"
            android:onClick="onClick" />

        <ImageView
            android:id="@+id/img_plus"
            android:src="@mipmap/plus_thin"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/action_bar_icon_padding"
            android:onClick="onClick"/>

        <ImageView
            android:id="@+id/img_filter"
            android:src="@mipmap/ic_filter_map"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/img_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/action_bar_icon_padding"
            android:onClick="onClick"/>

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:text="Visits"
            style="@style/EditTextStyle"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center_vertical|center_horizontal"
            android:layout_toRightOf="@+id/img_close"
            android:layout_toLeftOf="@+id/img_filter" />
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
                  android:gravity="center"
                  android:layout_gravity="center"
                  android:text="You have no notifications"
                  android:layout_margin="30dp"
                  android:background="@drawable/white_fill_grey_stroke"
                  android:padding="20dp"
                  android:textSize="15sp"
                  android:visibility="gone"
                  android:textColor="@color/light_gray"
                  android:id="@+id/no_results"
                  android:layout_height="wrap_content"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/visits_listview"
            android:background="@color/white" />
    </LinearLayout>

</LinearLayout>